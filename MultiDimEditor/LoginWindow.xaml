<Window x:Class="MultiDimEditor.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="23" Margin="75,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="75,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogIn" Content="Log in" HorizontalAlignment="Left" Margin="75,106,0,0" VerticalAlignment="Top" Width="120" Click="btnLogIn_Click"/>
        <Button x:Name="btnRegisterNew" Content="Register as new user and log in" HorizontalAlignment="Left" Margin="48,133,0,0" VerticalAlignment="Top" Width="185" Click="btnRegisterNew_Click"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="31,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
